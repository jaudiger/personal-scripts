use mod.nu *

const GEM_GLOBAL_CACHE_FOLDER = $"($nu.home-dir)/.gem"

# Cleanup all the build directories of the current directory recursively
def "main cache cleanup" [
    --path: string=$GIT_FOLDER # The path to clean
    --dry-run # Do not cleanup the build directories
    --quiet # Do not print the build directories cleaned
]: nothing -> nothing {
    # Global cleanup
    if ($GEM_GLOBAL_CACHE_FOLDER | path exists) {
        if not $quiet {
            print $"Cleaning global directory ($GEM_GLOBAL_CACHE_FOLDER)"
        }

        if not $dry_run {
            rm -rf $GEM_GLOBAL_CACHE_FOLDER
        }
    }
}

def main []: nothing -> nothing {}
