use mod.nu *

const PYTHON_LOCAL_CACHE_FOLDER = "__pycache__"
const RUFF_LOCAL_CACHE_FOLDER = ".ruff_cache"

# Cleanup all the cache directories of the current directory recursively
def "main cache cleanup" [
    --path: string=$GIT_FOLDER # The path to clean
    --dry-run # Do not cleanup the build directories
    --quiet # Do not print the build directories cleaned
]: nothing -> nothing {
    # Cleanup Python local cache directory
    let cache_directories = glob $"($path)/**/($PYTHON_LOCAL_CACHE_FOLDER)"

    for cache_directory in $cache_directories {
        if not $quiet {
            print $"Cleaning cache directory ($cache_directory)"
        }

        if $dry_run {
            continue
        }

        rm -r $cache_directory
    }

    # Cleanup Ruff local cache directory
    let cache_directories = glob $"($path)/**/($RUFF_LOCAL_CACHE_FOLDER)"

    for cache_directory in $cache_directories {
        if not $quiet {
            print $"Cleaning cache directory ($cache_directory)"
        }

        if $dry_run {
            continue
        }

        rm -r $cache_directory
    }
}

def main []: nothing -> nothing {}
